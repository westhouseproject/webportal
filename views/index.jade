extends layout

block styles
  if !user
    link(rel='stylesheet', href='/css/index-logged-off.css')

block content
  .container-fluid
    if !user
      .log-in
        h1 ALIS Web Portal

        form(role='form', action='/login', method='post')
          input(type='hidden', name='_csrf', value=token)
          .form-group
            input.form-control.input-lg(type='username', placeholder='Username or Email')
          .form-group
            input.form-control.input-lg(type='password', placeholder='Password')
          input.btn.btn-primary.btn-lg.btn-block(type='submit', value='Log In')

        hr

        .sign-up-sign
          span Or
        a.btn.btn-success.btn-lg.btn-block(href='/register') Sign Up
    else
      h1 Welcome!