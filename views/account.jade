extends layout

block styles
  link(rel='stylesheet', href='/css/account/style.css')

block content

  .container-fluid
    .col-xs-3
      - var hash = crypto.createHash('md5').update(user.email_address || '').digest('hex')
      img.img-responsive(src='http://www.gravatar.com/avatar/#{hash}?d=mm')
    .col-xs-9
      form.form-horizontal(role='form', action='/account', method='post')
        input(type='hidden', name='_csrf', value=token)

        //- Full name
        .form-group
          label.col-sm-2.control-label(for='full_name') Full Name
          .col-sm-10
            input.form-control(name='full_name', value='#{user.full_name}', type='name', placeholder='e.g. Jane Smith')

        //- Email address
        .form-group
          label.col-sm-2.control-label(for='email_address') Email Address
          .col-sm-10
            input.form-control(name='email_address', value='#{user.email_address || ""}', type='name', placeholder='e.g. sample@example.com')

        //- Submit button
        .form-group
          .col-sm-offset-2.col-sm-10
            input.btn.btn-primary(type='submit', value='Save Changes')